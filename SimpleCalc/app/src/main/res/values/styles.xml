<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonDigitStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/size_button</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="cornerRadius">@dimen/size_radius</item>
        <item name="android:layout_margin">@dimen/size_margin</item>
    </style>

    <style name="ButtonArithmeticSignsStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/size_button</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="cornerRadius">@dimen/size_radius</item>
        <item name="android:layout_margin">@dimen/size_margin</item>
    </style>

    <style name="ButtonEquallyStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/size_button</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:backgroundTint">@color/colorButtonEqually</item>
        <item name="cornerRadius">@dimen/size_radius</item>
        <item name="android:layout_margin">@dimen/size_margin</item>
    </style>

    <style name="ButtonDeleteStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/size_button</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:backgroundTint">@color/colorButtonC</item>
        <item name="cornerRadius">@dimen/size_radius</item>
        <item name="android:layout_margin">@dimen/size_margin</item>
    </style>

    <style name="EditTextStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/size_digit</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActivityBackgroundLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/light_grad</item>
    </style>

    <style name="ActivityBackgroundDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/dark_grad</item>
    </style>
</resources>